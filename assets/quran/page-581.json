  "suras": {
    "77": {
      "index": 77,
      "name": "المرسلات",
      "tname": "Al-Mursalaat",
      "ename": "The Emissaries",
      "type": "Meccan",
      "ayas": [
        {
          "index": 1,
          "text": "وَٱلْمُرْسَلَـٰتِ عُرْفًا",
          "bismillah": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ"
        },
        {
          "index": 2,
          "text": "فَٱلْعَـٰصِفَـٰتِ عَصْفًا",
          "bismillah": null
        },
        {
          "index": 3,
          "text": "وَٱلنَّـٰشِرَٰتِ نَشْرًا",
          "bismillah": null
        },
        {
          "index": 4,
          "text": "فَٱلْفَـٰرِقَـٰتِ فَرْقًا",
          "bismillah": null
        },
        {
          "index": 5,
          "text": "فَٱلْمُلْقِيَـٰتِ ذِكْرًا",
          "bismillah": null
        },
        {
          "index": 6,
          "text": "عُذْرًا أَوْ نُذْرًا",
          "bismillah": null
        },
        {
          "index": 7,
          "text": "إِنَّمَا تُوعَدُونَ لَوَٰقِعٌ",
          "bismillah": null
        },
        {
          "index": 8,
          "text": "فَإِذَا ٱلنُّجُومُ طُمِسَتْ",
          "bismillah": null
        },
        {
          "index": 9,
          "text": "وَإِذَا ٱلسَّمَآءُ فُرِجَتْ",
          "bismillah": null
        },
        {
          "index": 10,
          "text": "وَإِذَا ٱلْجِبَالُ نُسِفَتْ",
          "bismillah": null
        },
        {
          "index": 11,
          "text": "وَإِذَا ٱلرُّسُلُ أُقِّتَتْ",
          "bismillah": null
        },
        {
          "index": 12,
          "text": "لِأَىِّ يَوْمٍ أُجِّلَتْ",
          "bismillah": null
        },
        {
          "index": 13,
          "text": "لِيَوْمِ ٱلْفَصْلِ",
          "bismillah": null
        },
        {
          "index": 14,
          "text": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلْفَصْلِ",
          "bismillah": null
        },
        {
          "index": 15,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 16,
          "text": "أَلَمْ نُهْلِكِ ٱلْأَوَّلِينَ",
          "bismillah": null
        },
        {
          "index": 17,
          "text": "ثُمَّ نُتْبِعُهُمُ ٱلْـَٔاخِرِينَ",
          "bismillah": null
        },
        {
          "index": 18,
          "text": "كَذَٰلِكَ نَفْعَلُ بِٱلْمُجْرِمِينَ",
          "bismillah": null
        },
        {
          "index": 19,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 20,
          "text": "أَلَمْ نَخْلُقكُّم مِّن مَّآءٍ مَّهِينٍ",
          "bismillah": null
        },
        {
          "index": 21,
          "text": "فَجَعَلْنَـٰهُ فِى قَرَارٍ مَّكِينٍ",
          "bismillah": null
        },
        {
          "index": 22,
          "text": "إِلَىٰ قَدَرٍ مَّعْلُومٍ",
          "bismillah": null
        },
        {
          "index": 23,
          "text": "فَقَدَرْنَا فَنِعْمَ ٱلْقَـٰدِرُونَ",
          "bismillah": null
        },
        {
          "index": 24,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 25,
          "text": "أَلَمْ نَجْعَلِ ٱلْأَرْضَ كِفَاتًا",
          "bismillah": null
        },
        {
          "index": 26,
          "text": "أَحْيَآءً وَأَمْوَٰتًا",
          "bismillah": null
        },
        {
          "index": 27,
          "text": "وَجَعَلْنَا فِيهَا رَوَٰسِىَ شَـٰمِخَـٰتٍ وَأَسْقَيْنَـٰكُم مَّآءً فُرَاتًا",
          "bismillah": null
        },
        {
          "index": 28,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 29,
          "text": "ٱنطَلِقُوٓا۟ إِلَىٰ مَا كُنتُم بِهِۦ تُكَذِّبُونَ",
          "bismillah": null
        },
        {
          "index": 30,
          "text": "ٱنطَلِقُوٓا۟ إِلَىٰ ظِلٍّ ذِى ثَلَـٰثِ شُعَبٍ",
          "bismillah": null
        },
        {
          "index": 31,
          "text": "لَّا ظَلِيلٍ وَلَا يُغْنِى مِنَ ٱللَّهَبِ",
          "bismillah": null
        },
        {
          "index": 32,
          "text": "إِنَّهَا تَرْمِى بِشَرَرٍ كَٱلْقَصْرِ",
          "bismillah": null
        },
        {
          "index": 33,
          "text": "كَأَنَّهُۥ جِمَـٰلَتٌ صُفْرٌ",
          "bismillah": null
        },
        {
          "index": 34,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 35,
          "text": "هَـٰذَا يَوْمُ لَا يَنطِقُونَ",
          "bismillah": null
        },
        {
          "index": 36,
          "text": "وَلَا يُؤْذَنُ لَهُمْ فَيَعْتَذِرُونَ",
          "bismillah": null
        },
        {
          "index": 37,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 38,
          "text": "هَـٰذَا يَوْمُ ٱلْفَصْلِ ۖ جَمَعْنَـٰكُمْ وَٱلْأَوَّلِينَ",
          "bismillah": null
        },
        {
          "index": 39,
          "text": "فَإِن كَانَ لَكُمْ كَيْدٌ فَكِيدُونِ",
          "bismillah": null
        },
        {
          "index": 40,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 41,
          "text": "إِنَّ ٱلْمُتَّقِينَ فِى ظِلَـٰلٍ وَعُيُونٍ",
          "bismillah": null
        },
        {
          "index": 42,
          "text": "وَفَوَٰكِهَ مِمَّا يَشْتَهُونَ",
          "bismillah": null
        },
        {
          "index": 43,
          "text": "كُلُوا۟ وَٱشْرَبُوا۟ هَنِيٓـًٔۢا بِمَا كُنتُمْ تَعْمَلُونَ",
          "bismillah": null
        },
        {
          "index": 44,
          "text": "إِنَّا كَذَٰلِكَ نَجْزِى ٱلْمُحْسِنِينَ",
          "bismillah": null
        },
        {
          "index": 45,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 46,
          "text": "كُلُوا۟ وَتَمَتَّعُوا۟ قَلِيلًا إِنَّكُم مُّجْرِمُونَ",
          "bismillah": null
        },
        {
          "index": 47,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 48,
          "text": "وَإِذَا قِيلَ لَهُمُ ٱرْكَعُوا۟ لَا يَرْكَعُونَ",
          "bismillah": null
        },
        {
          "index": 49,
          "text": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
          "bismillah": null
        },
        {
          "index": 50,
          "text": "فَبِأَىِّ حَدِيثٍۭ بَعْدَهُۥ يُؤْمِنُونَ",
          "bismillah": null
        }
      ]
    }
  }
